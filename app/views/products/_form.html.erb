<%= form_for(product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, type: "text", class: "form-control", id: "product_name" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, type: "text", class: "form-control", rows: "2", placeholder: "Information about Bike", id: "product_description" %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, type: "text", class: "form-control", id: "product_image_url" %>
  </div>

  <div class="field">
    <%= form.label :colour %>
    <%= form.text_field :colour, type: "text", class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, type: "text", class: "form-control" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">         
      Save
    </button>
  </div>
<% end %>
